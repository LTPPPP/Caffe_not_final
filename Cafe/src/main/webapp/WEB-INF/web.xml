<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <!-- Welcome File List -->
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <!-- Servlet Definition -->
    <servlet>
        <servlet-name>StaffAdminController</servlet-name>
        <servlet-class>Controller.StaffAdminController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListItemsServlet</servlet-name>
        <servlet-class>Controller.ListItemsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignoutController</servlet-name>
        <servlet-class>Controller.SignoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductManagerController</servlet-name>
        <servlet-class>Controller.ProductManagerController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderAdminController</servlet-name>
        <servlet-class>Controller.OrderAdminController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StaffController</servlet-name>
        <servlet-class>Controller.StaffController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderController</servlet-name>
        <servlet-class>Controller.OrderController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>Controller.LoginController</servlet-class>
    </servlet>
    <!-- Servlet Mapping -->
    <servlet>
        <servlet-name>RemoveOrderServlet</servlet-name>
        <servlet-class>Controller.RemoveOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StaffAdminController</servlet-name>
        <url-pattern>/staff-admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListItemsServlet</servlet-name>
        <url-pattern>/listItem-admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignoutController</servlet-name>
        <url-pattern>/SignoutController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductManagerController</servlet-name>
        <url-pattern>/product-manager</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderAdminController</servlet-name>
        <url-pattern>/order-admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StaffController</servlet-name>
        <url-pattern>/staff</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderController</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveOrderServlet</servlet-name>
        <url-pattern>/removeOrder</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
